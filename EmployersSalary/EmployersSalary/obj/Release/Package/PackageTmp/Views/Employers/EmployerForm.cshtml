@model EmployersSalary.Models.Employer
@{
    ViewBag.Title = "EmployerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Employer</h2>

@using (Html.BeginForm("Save", "Employers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NetSalary)
        @Html.TextBoxFor(m => m.NetSalary, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NetSalary)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}